                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.3.2</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.17</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.0</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>1.9</version>
                    <configuration>
                        <excludedScopes>provided,test,system</excludedScopes>
                        <includeTransitiveDependencies>false</includeTransitiveDependencies>
                        <includedScopes>compile</includedScopes>
                    </configuration>
                    <executions>
                        <execution>
                            <id>download-licenses</id>
                            <goals>
                                <goal>download-licenses</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <!-- Update and correct open source license block comments -->
                <plugin>
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <configuration>
                        <header>license-header.txt</header>
                        <headerDefinitions>
                            <headerDefinition>python.xml</headerDefinition>
                        </headerDefinitions>
                        <mapping>
                            <py>PYTHON_STYLE</py>
                        </mapping>
                        <excludes combine.children="append">
                            <exclude>zinc-0.3.7/</exclude>
                            <exclude>datasets/dicom_xml/</exclude>
                            <exclude>regression-tests/datasets/</exclude>
                            <exclude>python.xml</exclude>
                            <exclude>integration-tests/tests/test_docs_generated.py</exclude>
                            <exclude>integration-tests/tests/sandbox</exclude>
                            <exclude>findbugs-exclude.xml</exclude>
                            <exclude>regression-tests/dist/</exclude>
                            <exclude>scalastyle-config.xml</exclude>
                            <exclude>checkstyle.xml</exclude>
                            <exclude>**/*.html</exclude>
                            <exclude>**/*.js</exclude>
                            <exclude>**/*.css</exclude>
                            <exclude>**/nosetests.xml</exclude>
                            <exclude>**/pom.xml</exclude>
                            <exclude>doc/**/*.*</exclude>
                            <exclude>conf/**/*.*</exclude>
                            <exclude>**/*.txt</exclude>
                            <exclude>**/*.csv</exclude>
                            <exclude>**/*.tsv</exclude>
                            <exclude>**/*.rst</exclude>
                            <exclude>**/*.tpl</exclude>
                            <exclude>**/*.inc</exclude>
                            <exclude>**/*.conf</exclude>
                            <exclude>**/*.dcm</exclude>
                            <exclude>**/*.log</exclude>
                            <exclude>**/*.mako</exclude>
                            <exclude>**/LICENSE</exclude>
                            <exclude>**/NOTICE</exclude>
                            <exclude>**/Dockerfile</exclude>
                            <exclude>**/.coverage</exclude>
                            <exclude>**/MANIFEST.in</exclude>
                            <exclude>**/PKG-INFO</exclude>
                            <exclude>**/*.sql</exclude>
                            <exclude>**/*pytest-report</exclude>
                            <exclude>**/dist/**/setup.cfg</exclude>

                        </excludes>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>check</goal>
                                <goal>format</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.9</version>
                    <executions>
                        <execution>
                            <id>attach-javadocs</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.8.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.4.1</version>
                    <configuration>
                        <localCheckout>true</localCheckout>
                        <pushChanges>false</pushChanges>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.1.2</version>
                    <executions>
                        <execution>
                            <id>attach-sources</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

            </plugins>
